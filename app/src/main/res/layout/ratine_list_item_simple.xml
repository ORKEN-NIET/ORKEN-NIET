<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/simple_place_rating_item"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:elevation="8dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_person"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:strokeWidth="2dp"
        android:background="@color/teal_700"
        android:padding="10dp"
        android:layout_width="72dp"
        android:layout_height="72dp"/>
    <TextView
        android:id="@+id/txv_name"
        android:layout_toRightOf="@id/img_person"
        android:text="Данияр"
        android:letterSpacing="0.05"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txv_pages"
        android:text="250 страниц прочитано"
        android:textSize="14dp"
        android:layout_toRightOf="@id/img_person"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>